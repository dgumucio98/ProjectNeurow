<?xml version="1.0" encoding="utf-8"?><!--on below line we are creating a swipe to refresh layout-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_grey_background"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".ui.PostWorkoutActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed"
        android:text="WORKOUT RESULTS"
        android:textColor="@color/white"
        android:textSize="75sp"
        android:textStyle="normal" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/Power_vs_Time"
        android:layout_width="550dp"
        android:layout_height="250dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="180dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/Power_vs_Pull"
        android:layout_width="550dp"
        android:layout_height="250dp"
        android:layout_below="@id/Power_vs_Time"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp" />

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="530dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="70dp">

        <TextView
            android:id="@+id/txtFtpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="This row's FTP"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txtFtpVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/digital"
            android:text="135 W"
            android:textColor="#0eed4d"
            android:textSize="140sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSuggestion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:fontFamily="sans-serif"
            android:text="[Post-workout suggestion goes here]"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/mint_green"
            android:text="Return to Dashboard"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="28dp" />

    </RelativeLayout>


</RelativeLayout>