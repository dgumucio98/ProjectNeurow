<?xml version="1.0" encoding="utf-8"?>
<!--on below line we are creating a swipe to refresh layout-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/dark_grey_background"
    android:orientation="vertical"
    tools:context=".ui.PostWorkoutActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="WORKOUT RESULTS"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="75sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtFtpVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="[FTP]"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFF00"
        android:textSize="50sp"
        android:textStyle="bold" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/Power_vs_Time"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="50dp"/>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/Power_vs_Pull"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_marginTop="155dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"/>

    <TextView
        android:id="@+id/txtSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:fontFamily="sans-serif"
        android:text="[Post-workout suggestion goes here]"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/rower_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/rowing_empty_white"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="@color/mint_green"
        android:text="Return to Dashboard"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28dp" />

</RelativeLayout>