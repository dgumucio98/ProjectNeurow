<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_grey_background"
    tools:context=".ui.PromptRotateActivity">

    <TextView
        android:id="@+id/txtPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:fontFamily="sans-serif-light"
        android:text="Please rotate your device"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtPrompt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="35dp"
        android:text="[Welcome Message to User]"
        android:textColor="@color/white"
        android:textSize="55sp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrompt"
        android:layout_centerHorizontal="true"
        android:scaleX="-1"
        android:src="@drawable/rotate_device" />

    <ImageView
        android:id="@+id/infoIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/gifRotate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/info_icon"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtFeedback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Make sure orientation lock is set to OFF"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="invisible" />

</RelativeLayout>